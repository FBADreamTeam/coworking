{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_title %}
    Add employee
{% endblock %}


{% block content %}
    <div class="container ">
        <div class="row">
            <div class="col-lg-5 features_col">
                <h2>Ajout d'employeur</h2>
                {{ form(form) }}

                {# Affichage message flash notice #}
                {% for message in app.flashes('notice') %}
                    <div>
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
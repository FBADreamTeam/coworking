{% extends 'admin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{room.name}}
{% endblock %}
{% block main_content %}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-lg-8">
            <div class="bgc-white bd bdrs-3 p-20">
                <h1>{{ room.name }}</h1>
                <div class="row">
                    <div class="col-lg-6">
                        <p><strong class="d-inline-block mb-2 text-success">Type :</strong> {{ room.roomType.label }}</p>
                        <p><strong class="d-inline-block mb-2 text-success">Description :</strong> {{ room.description }}</p>
                    </div>
                    <div class="col-lg-6">
                        <p><strong class="d-inline-block mb-2 text-success">Statut :</strong> {{ room.status }}</p>
                        <p><strong class="d-inline-block mb-2 text-success">Capacité :</strong> {{ room.capacity }}</p>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">Durée</th>
                        <th scope="col">Prix</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>A l'heure</td>
                            <td>{{ room.hourlyPrice | price(2, ',', ' ') }}</td>
                        </tr>
                        <tr>
                            <td>A la journée</td>
                            <td>{{ room.dailyPrice| price(2, '.', ',')  }}</td>
                        </tr>
                        <tr>
                            <td>A la semaine</td>
                            <td>{{ room.weeklyPrice | price(2, ',', ' ') }}</td>
                        </tr>
                        <tr>
                            <td>Au mois</td>
                            <td>{{ room.monthlyPrice | price(2, ',', ' ') }}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block final_javascripts %}

{% endblock %}